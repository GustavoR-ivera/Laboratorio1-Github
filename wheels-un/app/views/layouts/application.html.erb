<!DOCTYPE html>
<html>
  <head>
    <title>Wheels UNAL</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <main class="container mx-auto mt-28 px-5 flex">
      <% if notice %>
        <p class="alert alert-success bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
          <%= notice %>
        </p>
      <% end %>
      <% if alert %>
        <p class="alert alert-danger bg-sky-100 text-sky-700 px-3 py-2 font-medium rounded-lg mt-3">
          <%= alert %>
        </p>
      <% end %>
      <%= yield %>
    </main>
  </body>
</html>
